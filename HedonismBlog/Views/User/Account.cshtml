@model ServicesLibrary.Models.User.UserAccountModel

@{
    ViewData["Title"] = "UserInfo";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<h2>User data</h2>
<div class="container">
    <h5>@Model.Role.Name</h5>
    <form role="form" method="post" asp-controller="User" asp-action="update">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="custom-input-label" asp-for="Email"></label>
            <div class="col-md-4" style="padding: 0">
                <input class="form-control" accept="form-control" asp-for="Email" />
            </div>
            <span class="help-block" style="min-height: 4em;" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="custom-input-label" asp-for="Password"></label>
            <div class="col-md-4" style="padding: 0">
                <input class="form-control" asp-for="Password" />
            </div>
            <span class="help-block" style="min-height: 1em;" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-outline-success" type="submit" value="Update" />
        </div>
    </form>
</div>